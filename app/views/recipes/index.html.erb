<h1>Searching for - <%= @search %></h1>

<table border="1">
  <tr>
  	<th>Thumbnail</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= sanitize link_to(image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"])%></td>
      <td><%= sanitize link_to( recipe["title"], recipe["source_url"]) %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
